@model prj_chamadosBRA.Models.Chamado

@{
    ViewBag.Title = "Chamado N. " + Model.Id;
}

<h2>Acompanhamento Chamado</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <h4>Chamado - N° @Html.DisplayFor(model => model.Id)</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="panel panel-default">
        <div class="panel-heading">Informações</div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-4">
                    @Html.Label("Chamado:")
                    @Html.DisplayFor(model => model.Id)
                </div>
                <div class="col-md-4">
                    @Html.Label("Data Abertura:")
                    @Html.DisplayFor(model => model.DataHoraAbertura, "{0:hh:mm tt}")
                </div>
                @if (Model.ObraDestino != null)
                {
                    <div class="col-md-4">
                        @Html.Label("Obra Destino:")
                        @Html.DisplayFor(model => model.ObraDestino.Descricao)
                    </div>
                }
                @if (Model.SetorDestino != null)
                {
                    <div class="col-md-4">
                        @Html.Label("Setor Destino:")
                        @Html.DisplayFor(model => model.SetorDestino.Descricao)
                    </div>
                }
            </div>
            <div class="row">
                <div class="col-md-4">
                    @Html.Label("Requerente:")
                    @Html.DisplayFor(model => model.ResponsavelAberturaChamado.Nome)
                </div>
                <div class="col-md-4">
                    @Html.Label("E-mail:")
                    @Html.DisplayFor(model => model.ResponsavelAberturaChamado.UserName)
                </div>
                <div class="col-md-4">
                    @Html.LabelFor(model => model.Descricao)
                    @Html.DisplayFor(model => model.Descricao)
                </div>
            </div>
            <div class="row">
                <div class="col-md-10">
                    @Html.LabelFor(model => model.Observacao)
                    @Html.DisplayFor(model => model.Observacao)
                </div>
            </div>
            <div class="row">
                <div class="col-md-10">
                    @Html.LabelFor(model => model.DataHoraAbertura)
                    @Html.DisplayFor(model => model.DataHoraAbertura)
                </div>
            </div>
        </div>
    </div>




    <div class="panel panel-default">
        <div class="panel-heading">Descrição</div>
        <div class="panel-body">
            <div class="row">

                <div class="col-md-10">
                    @Html.Label("Assunto:")
                    @Html.DisplayFor(model => model.Assunto)
                </div>
            </div>
            <div class="row">
                <div class="col-md-10">
                    @Html.Label("Descrição:")
                    @Html.DisplayFor(model => model.Descricao)
                </div>
            </div>
            <div class="row">
                <div class="col-md-10">
                    @Html.Label("Observação:")
                    @Html.DisplayFor(model => model.Observacao)
                </div>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>

}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
