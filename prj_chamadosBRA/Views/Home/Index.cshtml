@{
    ViewBag.Title = "Home Page";
}
<div class="jumbotron">
    <h1>Chamados BRA</h1>
    <p class="lead">Administração do Sistema.</p>
    <!--<p><a href=".\Chamado\Create" class="btn btn-primary btn-lg">Novo Chamado &raquo;</a></p>-->
</div>
<div class="row">
    @if (Session["PerfilUsuario"].ToString() == "1" || Session["PerfilUsuario"].ToString() == "6" || Session["PerfilUsuario"].ToString() == "5")
    {
        <div class="col-md-4">
            <h2>Cadastro de Usuários</h2>
            <p>
                Cadastro de usuários para acessar o sistema.
            </p>
            <p><a class="btn btn-default" href="../Account/Index">Cadastro Usuários</a></p>
        </div>
    }
    @if (Session["PerfilUsuario"].ToString() == "1")
    {
        <div class="col-md-4">
            <h2>Cadastro de Obras</h2>
            <p>Criação de Obras da Rede Jesuita.</p>
            <p><a class="btn btn-default" href="../Obra/Index">Cadastros Obras</a></p>
        </div>
    }
    @if (Session["PerfilUsuario"].ToString() == "1" || Session["PerfilUsuario"].ToString() == "6")
    {
        <div class="col-md-4">
            <h2>Cadastro de Setores</h2>
            <p>Cadastro de Setores das obras da Rede Jesuita</p>
            <p><a class="btn btn-default" href="../Setor/Index">Cadastros Setores</a></p>
        </div>
    }
</div>
@if (Session["PerfilUsuario"].ToString() == "1" || Session["PerfilUsuario"].ToString() == "6")
{
    <div class="row">
        <div class="col-md-4">
            <h2>Cadastro de classificação</h2>
            <p>Cadastro de classificação de chamados para encerramento</p>
            <p><a class="btn btn-default" href="../Classificacao/Index">Cadastros Classificação</a></p>
        </div>
        <div class="col-md-4">
            <h2>Cadastro de subclassificação</h2>
            <p>Cadastro de subclassificação de chamados para encerramento</p>
            <p><a class="btn btn-default" href="../SubClassificacao/Index">Cadastros de SubClassificação</a></p>
        </div>
    </div>
}
@Html.Hidden("notice", @TempData["notice"])
@if (TempData["notice"] != null)
{
    <div id="modalNotice" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Mensagem</h4>
                </div>
                <div class="modal-body">
                    <p class="text-success"><strong>@TempData["notice"]</strong></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
                </div>
            </div>

        </div>
    </div>
}
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
<script>
    $(window).load(function () {
        if ($('#notice').val() != "") {
            //alert($('#notice').val());
            $('#modalNotice').modal('show');
        }
    });
</script>