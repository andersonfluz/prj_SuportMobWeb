@using prj_chamadosBRA.Models;
@using Microsoft.AspNet.Identity;
@{
    ViewBag.Title = "Gerenciamento de Conta";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success" style="font-size: x-large; font-weight: bold; color: #37D50F">@ViewBag.StatusMessage</p>
<div class="row">
    <div class="col-md-12">
        @if (ViewBag.HasLocalPassword)
        {
            @Html.Partial("_ChangePasswordPartial")
        }
        else
        {
            @Html.Partial("_SetPasswordPartial")
        }

        @*<section id="externalLogins">
            @Html.Action("RemoveAccountList")
            @Html.Partial("_ExternalLoginsListPartial", new { Action = "LinkLogin", ReturnUrl = ViewBag.ReturnUrl })
        </section>*@
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
